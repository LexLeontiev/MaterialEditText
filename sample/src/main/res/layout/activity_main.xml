<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/met1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="15sp"
                app:met_baseColor="#4d4d4d"
                app:met_secondaryColor="#999999"
                app:met_helperText="Helper text"
                app:met_hint="Label"
                app:met_isRequire="true"/>

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Show/hide error"
            android:onClick="activateError"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Edit mode (enable)"
            android:onClick="activateEditEnable"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Edit mode (disable)"
            android:onClick="activateEditDisable"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="View mode"
            android:onClick="activateViewMode"/>

    </LinearLayout>
</ScrollView>